        <script>var dojoConfig = { parseOnLoad: true };</script>

       <div id="mapDiv"
            data-dojo-type="dijit.layout.BorderContainer"
            data-dojo-props="gutters:'true', design:'sidebar'">
           
           <div id="LocateButton" style="float: right;top: 11px;right: 600px;">
           </div>
           <div id="BasemapToggle">
           </div>
           <div id="Basemap_Gallery" class="button" style="float:right;top: 10px;right: 19px;">
               <div data-dojo-type="dijit/TitlePane" data-dojo-props="title:'Switch Basemap', closable:false,  open:false">
                   <div data-dojo-type="dijit/layout/ContentPane" style="width: 380px; height: 280px;
                    overflow: auto;">
                       <div id="basemapGallery">
                       </div>
                   </div>
               </div>
           </div>

           <div id="Layer_galery" class="button" style="float:right;top: 10px;right: 19px; z-index: 999;">
               <div data-dojo-type="dijit/TitlePane" data-dojo-props="title:'Switch Layers', closable:false,  open:false">
                   <div data-dojo-type="dijit/layout/ContentPane" style="width: auto; height: auto;
                    overflow: auto;">
                       <table>
                           <tr>
                               <td>
                                   Layer List :
                               </td>
                               <td>
                                   <span id="layer_list"></span>
                               </td>

                           </tr>
                       </table>

                   </div>
               </div>
           </div>


           <div id="toggler" style="visibility:hidden; position: absolute; top: 150px;">
               <div id="effect" class="ui-widget-content ">
                   <h3><font color="#B40431"> Station Details</font> </h3>
                   <a href="#" id="more">More</a>

                   <a href="#" id="hide"> Hide </a>
                   <!--<img src="content/Images/chart.png" width="100" height="200" style="position: absolute; left:2em; bottom: 2em;">;-->
                   <div rel="external" id="gauge" style="visibility:visible; min-width: 100px; height: 250px; margin: 0 auto"></div>
                   <div rel="external" id="container" style="visibility:hidden; min-width: 350px; height: 350px; margin: 0 auto"></div>
                   <div id="dialog-weather-detail" title="Weather Detail"></div>
               </div>

           </div>
          
           <div class="details" data-dojo-type="dijit.layout.BorderContainer" data-dojo-props="region:'top'" style="height: 30px;float: right;top: 11px;right: 560px;">
               <input type="text" id="searchText"/>
               <input type="button" id="button" value="Find" onclick="execute(dojo.byId('searchText').value);" />
           </div>
       </div>
        <div id="Spatial_Analysis" class="button" style="float: right; top: 10px; right: 24px; z-index: 999;">
            <div data-dojo-type="dijit/TitlePane" data-dojo-props="title:'Spatial Analysis', closable:false,  open:false">
                <div data-dojo-type="dijit/layout/ContentPane" style="width: 380px; height: 280px; overflow: auto;">
                    <div id="Spatial_Analysis_div">
                        <table>
                            <tr>
                                <td>
                                    <p><b>Pick a tool and draw on the map. The drawn graphic will be buffered based on the specified parameters.</b> </p>
                                </td>
                            </tr>

                        </table>
                        <table>
                            <tr>
                                <td>
                                    <button data-dojo-type="dijit.form.Button" onclick="app.tb.activate(esri.toolbars.Draw.LINE);app.map.hideZoomSlider();"><font color="F2EEEE">Line</font></button>
                                </td>
                                <td>
                                    <button data-dojo-type="dijit.form.Button" onclick="app.tb.activate(esri.toolbars.Draw.POLYLINE);app.map.hideZoomSlider();"><font color="F2EEEE">Polyline</font></button>
                                </td>
                                <td>
                                    <button data-dojo-type="dijit.form.Button" onclick="app.tb.activate(esri.toolbars.Draw.FREEHAND_POLYLINE);app.map.hideZoomSlider();"><font color="F2EEEE">Freehand Polyline</font></button>
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <button data-dojo-type="dijit.form.Button" onclick="app.tb.activate(esri.toolbars.Draw.POLYGON);app.map.hideZoomSlider();"><font color="F2EEEE">Polygon</font></button>
                                </td>
                                <td>
                                    <button data-dojo-type="dijit.form.Button" onclick="app.tb.activate(esri.toolbars.Draw.FREEHAND_POLYGON);app.map.hideZoomSlider();"><font color="F2EEEE">Freehand Polygon</font></button>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                            </tr>
                        </table>
                        <table>
                            <tbody>
                                <tr>
                                    <td>
                                        <b>Buffer Parameters</b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Spatial Reference WKID</td>
                                    <td>
                                        <input type="text" id="bufferSpatialReference" size="5" value="32612" /></td>

                                </tr>
                                <tr>
                                    <td>Distance:</td>
                                    <td>
                                        <input type="text" id="distance" size="5" value="10" /></td>
                                    
                                </tr>
                                <tr>
                                    <td>

                                    </td>
                                    <td>
                                        <select id="unit" style="width: 100px;color:black">
                                            <option value="UNIT_STATUTE_MILE">Miles</option>
                                            <option value="UNIT_FOOT">Feet</option>
                                            <option value="UNIT_KILOMETER">Kilometers</option>
                                            <option value="UNIT_METER">Meters</option>
                                            <option value="UNIT_DEGREE">Degrees</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <button data-dojo-type="dijit.form.Button" type="button" onclick="app.map.graphics.clear(); app.tb.deactivate(esri.toolbars.Draw)"><font color="FFFFFF">Clear Graphics</font></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

